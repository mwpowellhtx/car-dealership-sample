<div id="div-manufacturers">
    <table>

        <tr>
            <th>@Html.LabelFor(x => x.FirstOrDefault().Name)</th>
        </tr>

        @for (var i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>@Html.DisplayTextFor(x => x.ElementAt(i).Name)</td>
            </tr>
        }

    </table>
</div>
